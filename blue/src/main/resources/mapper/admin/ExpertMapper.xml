<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blue.auth.mapper.ExpertMapper">

    <resultMap id="ExpertDtoMap" type="com.blue.auth.dto.ExpertDto">
        <id     property="expertId"   column="expert_id"/>
        <result property="expertName" column="expert_name"/>
        <result property="createdAt"  column="created_at"/>
        <result property="updatedAt"  column="updated_at"/>
    </resultMap>

    <!-- 목록 + 검색 -->
    <select id="findAll" resultMap="ExpertDtoMap">
        SELECT
        expert_id,
        expert_name,
        created_at,
        updated_at
        FROM experts
        WHERE 1 = 1
        <if test="keyword != null and keyword != ''">
            AND expert_name LIKE CONCAT('%', #{keyword}, '%')
        </if>
        ORDER BY expert_name ASC
    </select>

    <!-- 추가 -->
    <insert id="insert">
        INSERT INTO experts (expert_name)
        VALUES (#{expertName})
    </insert>

    <!-- 이름 변경 -->
    <update id="rename">
        UPDATE experts
        SET expert_name = #{expertName},
            updated_at  = NOW()
        WHERE expert_id = #{expertId}
    </update>

    <!-- 삭제 (FK 걸려 있으면 에러) -->
    <delete id="delete">
        DELETE FROM experts
        WHERE expert_id = #{expertId}
    </delete>

    <!-- 해당 전문가를 사용하는 사용자 수 -->
    <select id="countUsersUsing" resultType="int">
        SELECT COUNT(*)
        FROM users
        WHERE expert_id = #{expertId}
    </select>

</mapper>
